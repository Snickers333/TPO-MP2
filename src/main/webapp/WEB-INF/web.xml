<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CarFormServlet</servlet-name>
        <servlet-class>com.example.servletytpo.CarFormServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CarSearchServlet</servlet-name>
        <servlet-class>com.example.servletytpo.CarSearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CarResultServlet</servlet-name>
        <servlet-class>com.example.servletytpo.CarResultServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarFormServlet</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CarSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CarResultServlet</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
</web-app>
